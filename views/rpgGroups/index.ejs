<% layout('layouts/boilerplate') %>

    <div id="cluster-map"></div>

    <h1>All RPG Groups</h1>
    <div>
        <a href="/rpgGroups/new">Add RPG Group</a>
    </div>
    <% for (let rpgGroup of rpgGroups) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(rpgGroup.images.length) { %>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= rpgGroup.images[0].url %>">
                        <% }else { %>
                            <img class="img-fluid"
                                src="https://res-console.cloudinary.com/djxomm4es/thumbnails/v1/image/upload/v1690486784/WWVscCBDYW1wL3k0cHZqNXJ2c2ZrYXB1c3F1eDZj/as_is"
                                alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= rpgGroup.title %></h5>
                        <p class="card-text">
                            <%= rpgGroup.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= rpgGroup.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/rpgGroups/<%= rpgGroup._id %>">View <%= rpgGroup.title
                                %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
                const rpgGroups = { features: <%- JSON.stringify(rpgGroups) %>}
            </script>

            <script src="/javascripts/clusterMaps.js"></script>